{% block title %}{% endblock %}

{% block message %}Hello! Select a project to investigate.{% endblock %}

{% block list %}

{% for project in projects %}
                      <v-list-item
                        href="{{ project.url }}"
                      >
                        <template v-slot:prepend>
                          <v-icon
                            color="deep-orange"
                            icon="mdi-source-repository">
                          </v-icon>
                        </template>
                        <v-list-item-title>{{ project.name }}</v-list-item-title>
                      </v-list-item>{% endfor %}
{% endblock %}
