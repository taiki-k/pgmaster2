<html>
<head>
<meta charset="UTF-8">
<title>pgmaster2{% block title %}{% endblock %}</title>
<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/vuetify/2.6.12/vuetify.min.css" integrity="sha512-NRfXz/kaXFChyyQ0KS2gW679sdfCYhKxwhqqGjaZMpDnWPhG0/OViu6TKkqtjwueBzZA4RpuhLY39U8NkHwZ3w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/7.0.96/css/materialdesignicons.min.css" integrity="sha512-fXnjLwoVZ01NUqS/7G5kAnhXNXat6v7e3M9PhoMHOTARUMCaf5qNO84r5x9AFf5HDzm3rEZD8sb/n6dZ19SzFA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
</head>
<body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.7.14/vue.min.js" integrity="sha512-BAMfk70VjqBkBIyo9UTRLl3TBJ3M0c6uyy2VMUrq370bWs7kchLNN9j1WiJQus9JAJVqcriIUX859JOm12LWtw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vuetify/2.6.12/vuetify.min.js" integrity="sha512-RPnZ48qBYcvQ+7erC7Weu+EzbUmbZf8t7HQUeryQmr09ANWgAOVxkFWqIanp7GO7roCOsuxTO2par6iOF1mE3w==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<div id="app">
  <v-app>
    <v-app-bar
      app
      dark
      color="primary"
    >
      <v-toolbar-title>pgmaster2{{ self.title() }}</v-toolbar-title>
    </v-app-bar>
    <v-main>
      <v-container>
        <v-row>
          <v-col>
            <v-breadcrumbs
              :items="nav_items"
            >
              <template v-slot:divider>
                <v-icon>mdi-chevron-right</v-icon>
              </template>
            </v-breadcrumbs>
          </v-col>
        </v-row>
        <v-row>
          <v-col>
            <p>{% block message %}{% endblock %}</p>
          </v-col>
        </v-row>
        <v-row>
          <v-col>{% block selections %}{% endblock %}
          </v-col>
        </v-row>
      </v-container>
    </v-main>
  </v-app>
</div>
<script>{% if config['DEBUG'] %}
  Vue.config.devtools = true;{% endif %}
  new Vue({
    el: '#app',
    vuetify: new Vuetify({
      theme: {
        themes: {
          light: {
            primary:   '#336791',
            secondary: '#64a3c7'
          }
        }
      }
    }),
    data: {
      nav_items: [
        {
          text: "Top",
          disabled: false,
          href: "{{ url_for('root') }}"
        },{% block navi_items %}{% endblock %}
      ],{% block extra_data %}{% endblock %}
    }
  });
</script>
</body>
</html>
